{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/node20/tsconfig.json"
  ],
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "build",

    // Let ESLint handle these.
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*.ts"]
}
